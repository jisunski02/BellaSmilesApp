<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:elevation="5dp"
        app:cardElevation="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_time_schedule"
                android:text="9:00 AM to 5:00 AM"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="@color/MainColor2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>


            <TextView
                android:id="@+id/tv_service"
                android:text="Dental Fillings"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_time_schedule"
                app:layout_constraintStart_toStartOf="parent"/>


            <TextView
                android:id="@+id/tv_dateholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:text="Date of Schedule"
                app:layout_constraintStart_toStartOf="@+id/tv_service"
                app:layout_constraintTop_toBottomOf="@+id/tv_service"/>

            <TextView
                android:id="@+id/tv_datetimeschedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/MainColor2"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="1993/04/23"
                app:layout_constraintStart_toStartOf="@+id/tv_dateholder"
                app:layout_constraintTop_toBottomOf="@+id/tv_dateholder"/>

                <ImageView
                    android:id="@+id/iv_seemore"
                    android:src="@drawable/ic_more_vert_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_cost_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:text="Service Cost"
                app:layout_constraintStart_toStartOf="@id/tv_datetimeschedule"
                app:layout_constraintTop_toBottomOf="@+id/tv_datetimeschedule"/>

            <TextView
                android:id="@+id/tv_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/MainColor"
                android:textSize="15sp"
                android:text="PHP 1500.00"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/button_bgv2"
                app:layout_constraintStart_toStartOf="@id/tv_cost_label"
                app:layout_constraintTop_toBottomOf="@+id/tv_cost_label"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>